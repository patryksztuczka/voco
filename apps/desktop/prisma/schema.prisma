generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Transcription {
  id        String   @id @default(uuid())
  text      String
  timestamp DateTime @default(now())
  duration  Int?
}

model Preset {
  id        String   @id @default(uuid())
  name      String
  prompt    String
  isBuiltin Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
